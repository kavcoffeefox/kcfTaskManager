<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<AnchorPane prefHeight="400.0" prefWidth="680.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kavcoffeefox.kcftaskmanager.controllers.TabTableController">
    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <center>
            <AnchorPane BorderPane.alignment="CENTER">
                <TableView fx:id="taskTableView" prefHeight="400.0" prefWidth="600.0" tableMenuButtonVisible="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="taskDateColumn" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" text="Исполнить до:" />
                        <TableColumn fx:id="taskWorkerColumn" maxWidth="-1.0" minWidth="120.0" prefWidth="-1.0" text="Сотрудник" />
                        <TableColumn fx:id="taskNameColumn" maxWidth="-1.0" minWidth="150.0" prefWidth="-1.0" sortable="false" text="Название" />
                        <TableColumn fx:id="taskDescriptionColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" sortable="false" text="Описание" />
                    </columns>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                </TableView>
            </AnchorPane>
        </center>
        <top>
          <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <buttons>
                  <Button fx:id="tudayFilter" mnemonicParsing="false" onAction="#actionButtonPressed" text="Сегодня" />
                  <Button fx:id="failedFilter" mnemonicParsing="false" onAction="#actionButtonPressed" text="Не исполненые" />
                  <Button fx:id="updateView" maxWidth="20.0" minWidth="20.0" mnemonicParsing="false" onAction="#actionButtonPressed" prefWidth="20.0" text="!" />
              </buttons>
          </ButtonBar>
        </top>
    </BorderPane>
</AnchorPane>
