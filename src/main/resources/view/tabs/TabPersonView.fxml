<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kavcoffeefox.kcftaskmanager.controllers.TabPersonController">
   <center>
      <AnchorPane>
          <TableView fx:id="personTableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columns>
                <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Фамилия" />
                <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="Имя" />
                <TableColumn fx:id="patronymicColumn" prefWidth="75.0" text="Отчество" />
                <TableColumn fx:id="birthDayColumn" prefWidth="132.0" text="Дата рождения" />
                <TableColumn fx:id="departmentColumn" prefWidth="75.0" text="Отдел" />
                <TableColumn fx:id="positionColumn" prefWidth="100.0" text="Должность" />
                <TableColumn fx:id="rankColumn" prefWidth="76.0" text="Ранг" />
                <TableColumn fx:id="descriptionColumn" prefWidth="154.0" text="Доп. информация" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
          </TableView>
      </AnchorPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button maxHeight="22.0" mnemonicParsing="false" onAction="#addPerson" prefHeight="22.0" text="Добавить сотрудника" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
