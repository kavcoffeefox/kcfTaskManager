<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.kavcoffeefox.kcftaskmanager.controllers.RootViewController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
            <items>
                  <MenuItem fx:id="opentaskbd" mnemonicParsing="false" onAction="#handleOpen" text="Открыть" />
                  <MenuItem fx:id="savetasks" mnemonicParsing="false" onAction="#handleSave" text="Сохранить" />
                  <MenuItem fx:id="saveastasks" mnemonicParsing="false" onAction="#handleSaveAs" text="Сохранить как ..." />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Настройки">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#actionButtonPressed" text="Показать настройки" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <AnchorPane prefHeight="34.0" prefWidth="800.0" style="-fx-border-color: #339999;" BorderPane.alignment="CENTER">
         <children>
            <ButtonBar layoutY="2.0" prefHeight="32.0" prefWidth="518.0" AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="1.0" AnchorPane.topAnchor="1.0">
               <buttons>
                  <Button fx:id="addtask" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="25.0" text="Добавить" />
                  <Button fx:id="edittask" mnemonicParsing="false" onAction="#actionButtonPressed" text="Изменить" />
                  <Button fx:id="completetask" mnemonicParsing="false" onAction="#actionButtonPressed" text="Завершить" />
                  <Button fx:id="deletetask" mnemonicParsing="false" onAction="#actionButtonPressed" prefHeight="26.0" text="Удалить" />
               </buttons>
            </ButtonBar>
            <HBox layoutX="1.0" layoutY="2.0" style="-fx-border-color: #339999; -fx-border-width: 2;" AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="1.0">
               <children>
                  <Label prefHeight="30.0" text="Сегодня:" textAlignment="CENTER">
                     <padding>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
                     </padding>
                  </Label>
                  <Label fx:id="nowDataAndTime" contentDisplay="CENTER" prefHeight="30.0" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
